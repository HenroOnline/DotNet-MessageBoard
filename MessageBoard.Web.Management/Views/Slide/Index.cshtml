@model MessageBoard.Web.Management.Models.Slide.IndexViewModel
<div class="row">
	<div class="col-sm-12">
		<div class="list-group">
			@foreach (var s in Model.Slides)
			{
				<a href="~/Slide/Detail/@s.Id" class="list-group-item">
					<p class="list-group-item-text">@s.Description</p>
				</a>
			}
		</div>
	</div><!-- /.col-sm-12 -->
</div>
<p>
	<a href="~/Slide/Detail/" class="btn btn-primary" role="button">Slide toevoegen</a>
</p>